<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="https://i.pinimg.com/236x/21/07/46/210746a2c4f1c4779884cd532de39551.jpg" />
    <title>Steam Game Library</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #121212;
        color: #fff;
        margin: 0;
        padding: 0;
      }

      h1 {
        text-align: center;
        padding: 20px;
        margin-bottom: 0;
      }

      #searchBar {
        display: block;
        margin: 0 auto 30px auto;
        padding: 10px;
        width: 60%;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        outline: none;
      }

      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
      }

      .card {
        background-color: #1e1e1e;
        width: 100%;
        max-width: 280px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.2s ease-in-out;
      }

      .card:hover {
        transform: scale(1.03);
      }

      .card img {
        width: 100%;
        height: auto;
      }

      .card-body {
        padding: 15px;
      }

      .card-body h3 {
        margin: 0 0 10px 0;
        font-size: 18px;
        color: rgb(133, 133, 255);
      }

      .card-body h3 a{
        color: rgb(17, 199, 219);
      }

      .card-body p {
        margin: 4px 0;
        font-size: 14px;
        color: #ccc;
      }

      .review {
        font-size: 13px;
        color: #aaffaa;
      }

      .price {
        font-weight: bold;
        color: #ffcc00;
      }

      @media (max-width: 600px) {
        #searchBar {
          width: 90%;
        }
        .card-body p {
          font-size: 13px;
        }
      }
    </style>
  </head>
  <body>
    <h1>Steam Game Library</h1>
    <input type="text" id="searchBar" placeholder="Search for a game..." />
    <div style="text-align: center; margin-bottom: 10px">
      <button id="sortAZ">Sort A-Z</button>
    </div>
    <div class="container" id="gameContainer">
      <% games.forEach(game => { const imageUrl = game.appid === 2623190 ?
      'https://shared.fastly.steamstatic.com/store_item_assets/steam/apps/2623190/a7cee9165bb1bfc092c390c5cff215ce0e381dfc/header.jpg'
      :
      `https://cdn.cloudflare.steamstatic.com/steam/apps/${game.appid}/header.jpg`;
      %>
      <div class="card" data-name="<%= game.name.toLowerCase() %>">
        <img src="<%= imageUrl %>" alt="<%= game.name %>" />
        <div class="card-body">
          <h3>
            <a
              href="https://store.steampowered.com/app/<%= game.appid %>"
              target="_blank"
            >
              <%= game.name %>
            </a>
          </h3>
          <p><strong>Developer:</strong> <%= game.developer %></p>
          <p><strong>Publisher:</strong> <%= game.publisher %></p>
          <p><strong>Players:</strong> <%= game.owners %></p>
          <p class="review">
            üëç <%= game.positive %> | üëé <%= game.negative %>
          </p>
          <% let approxINR = Math.round((game.price / 100) * 85); %>
          <p class="price">around ‚Çπ<%= approxINR %></p>
        </div>
      </div>
      <% }) %>
    </div>

    <script>
      const searchBar = document.getElementById("searchBar");
      const cards = document.querySelectorAll(".card");
      const container = document.getElementById("gameContainer");
      const sortBtn = document.getElementById("sortAZ");

      const originalOrder = Array.from(cards);
      let isSorted = false;

      searchBar.addEventListener("input", function () {
        const keyword = this.value.toLowerCase();
        cards.forEach((card) => {
          const name = card.getAttribute("data-name");
          card.style.display = name.includes(keyword) ? "block" : "none";
        });
      });

      sortBtn.addEventListener("click", () => {
        let cardArray;
        if (!isSorted) {
          cardArray = Array.from(cards).sort((a, b) => {
            const nameA = a.getAttribute("data-name");
            const nameB = b.getAttribute("data-name");
            return nameA.localeCompare(nameB);
          });
          sortBtn.textContent = "Reset Order";
        } else {
          cardArray = originalOrder;
          sortBtn.textContent = "Sort A‚ÄìZ";
        }

        container.innerHTML = "";
        cardArray.forEach((card) => container.appendChild(card));
        isSorted = !isSorted;
      });
    </script>
  </body>
</html>
